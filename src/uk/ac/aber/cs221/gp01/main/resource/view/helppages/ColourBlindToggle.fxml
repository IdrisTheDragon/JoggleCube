<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<!--
    * ColourBlindToggle - The help page that explains how to toggle between the regular and colour-blind friendly colour schemes.
    *
    * @author Alex Thumwood (alt38@aber.ac.uk)
    * @version 1.0

-->

<VBox fx:id="root" styleClass="mainContainer" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../../css/HelpPage.css" />
    </stylesheets>
    <Label fx:id="title" styleClass="title" text="Toggling Colourblind Mode: " textAlignment="CENTER" wrapText="true" />
    <VBox alignment="BOTTOM_CENTER" styleClass="content">
        <ImageView fitHeight="290.0" fitWidth="309.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../img/help/colourblind.gif" />
        </ImageView>
    </VBox>
</VBox>
