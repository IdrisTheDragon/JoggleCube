<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<!--
    * ViewToggle - The help page that explains how to change between 3D, 2.5D and 2D views
    *
    * @author Alex Thumwood (alt38@aber.ac.uk)
    * @version 1.0
-->

<VBox fx:id="root" styleClass="mainContainer" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../../css/HelpPage.css" />
    </stylesheets>
    <Label styleClass="content" text="To toggle between 3D, 2.5D and 2D views, use the tabs on the top-left of the game window." textAlignment="CENTER" wrapText="true" />
    <VBox alignment="BOTTOM_CENTER" styleClass="content">
        <ImageView fitHeight="270.0" fitWidth="309.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../img/help/toggleview.gif" />
        </ImageView>
    </VBox>
</VBox>
